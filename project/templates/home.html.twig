{% extends 'base.html.twig' %}

{% block body %}
<div class="container-fluid">
    {% for task in tasks %}
        {% if loop.first %}
            <div class="row mt-3">
        {% endif %}

            {{ block("task_card", "task/task_card__view.html.twig") }}

        {% if loop.index % 6 == 0 %}
            </div><div class="row mt-3">
        {% endif %}

        {% if loop.last %}
            </div>
        {% endif %}
    {% endfor %}
</div>
{% endblock %}