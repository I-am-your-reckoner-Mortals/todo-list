{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        {{ form_start(form) }}
        {% for task in form %}
            {{ form_row(task, {'attr': {'disabled': 'disabled' }}) }}
        {% endfor %}
        {{ form_end(form) }}
        <a href="{{ path('task_edit', {'id': form.vars.data.id}) }}" type="button" class="btn btn-primary mt-3">Edit</a>
    </div>
{% endblock %}


